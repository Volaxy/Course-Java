<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller" styleClass="login" hgap="15" vgap="15">
	<padding>
		<Insets left="40" right="40" top="80"/>
	</padding>
	
	<Label text = "Welcome" GridPane.columnIndex = "0" GridPane.rowIndex = "0" styleClass="login-title" GridPane.columnSpan="2" GridPane.halignment="CENTER">
		<GridPane.margin>
			<Insets top="20" bottom="20"/>
		</GridPane.margin>
	</Label>
	
	<Label text = "E-mail: " styleClass="login-form-label" GridPane.columnIndex = "0" GridPane.rowIndex = "1"></Label>
	<TextField styleClass="login-form-button" GridPane.columnIndex = "1" GridPane.rowIndex = "1" fx:id="email"></TextField>
	<Label text = "Password: " styleClass="login-form-label" GridPane.columnIndex = "0" GridPane.rowIndex = "2"></Label>
	<PasswordField styleClass="login-form-button" GridPane.columnIndex = "1" GridPane.rowIndex = "2" fx:id="password"></PasswordField>
	
	<Button text = "Enter" GridPane.columnIndex = "0" GridPane.rowIndex = "3" onAction="#enter">
	
	</Button>
</GridPane>

