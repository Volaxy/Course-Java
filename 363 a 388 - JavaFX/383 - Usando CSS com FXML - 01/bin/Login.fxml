<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.Controller" styleClass="login">
	<Label text = "Welcome" GridPane.columnIndex = "0" GridPane.rowIndex = "0" styleClass="login-title"></Label>
	
	<Label text = "E-mail: " styleClass="login-form-label" GridPane.columnIndex = "0" GridPane.rowIndex = "1"></Label>
	<TextField styleClass="login-form-button" GridPane.columnIndex = "0" GridPane.rowIndex = "2" fx:id="email"></TextField>
	<Label text = "Password: " styleClass="login-form-label" GridPane.columnIndex = "0" GridPane.rowIndex = "3"></Label>
	<PasswordField styleClass="login-form-button" GridPane.columnIndex = "0" GridPane.rowIndex = "4" fx:id="password"></PasswordField>
	
	<Button text = "Enter" GridPane.columnIndex = "0" GridPane.rowIndex = "5" onAction="#enter">
	
	</Button>
</GridPane>

